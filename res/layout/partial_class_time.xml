<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grey_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginBottom="100dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<ToggleButton
		    android:id="@+id/day_one"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_one_short"
		    android:textOff="@string/day_one_short"
		    android:textOn="@string/day_one_short" />
		
		<ToggleButton
		    android:id="@+id/day_two"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_two_short"
		    android:textOff="@string/day_two_short"
		    android:textOn="@string/day_two_short" />
		
		<ToggleButton
		    android:id="@+id/day_three"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_three_short"
		    android:textOff="@string/day_three_short"
		    android:textOn="@string/day_three_short" />
		
		<ToggleButton
		    android:id="@+id/day_four"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_four_short"
		    android:textOff="@string/day_four_short"
		    android:textOn="@string/day_four_short" />
		
		<ToggleButton
		    android:id="@+id/day_five"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_five_short"
		    android:textOff="@string/day_five_short"
		    android:textOn="@string/day_five_short" />
		
		<ToggleButton
		    android:id="@+id/day_six"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_six_short"
		    android:textOff="@string/day_six_short"
		    android:textOn="@string/day_six_short" />
		
		<ToggleButton
		    android:id="@+id/day_seven"
		    android:layout_width="0dp"
		    android:layout_weight=".14"
		    android:layout_height="wrap_content"
		    android:text="@+string/day_seven_short"
		    android:textOff="@string/day_seven_short"
		    android:textOn="@string/day_seven_short" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            style="@android:style/Widget.EditText"
            android:id="@+id/add_course_start"
            android:layout_width="0dp"
            android:layout_weight=".42"
            android:layout_height="wrap_content"
            android:text="@+string/start_time"  />

        <TextView
            android:id="@+id/add_course_too"
            android:layout_width="0dp"
            android:layout_weight=".16"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="9dp"
            android:text="@+string/to"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            style="@android:style/Widget.EditText"
            android:id="@+id/add_course_end"
            android:layout_width="0dp"
            android:layout_weight=".42"
            android:layout_height="wrap_content"
            android:hint="@+string/end_time"   />

    </LinearLayout>

    <EditText
        android:id="@+id/add_course_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="@+string/location" >
    </EditText>

</LinearLayout>